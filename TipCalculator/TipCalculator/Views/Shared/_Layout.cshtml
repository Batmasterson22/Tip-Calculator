<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Multi-Person Tip Calculator</title>
    <link rel="icon" href="~/Stuff/favicon.ico" type="image/x-icon" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="background-color:#244700">
    
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p style="color:#ffffff">&copy; @DateTime.Now.Year - Jason's Tip Calculator</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
